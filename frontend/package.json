{
  "name": "roomservation-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Room Reservation Service Frontend Monorepo",
  "scripts": {
    "dev": "turbo run dev",
    "dev:user": "turbo run dev --filter=user-web",
    "dev:admin": "turbo run dev --filter=admin-web",
    "dev:kiosk": "turbo run dev --filter=kiosk-web",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "turbo": "^2.3.3"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
